<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container-fluid">
    <div class="row my-5 mx-5">
      <div class="col-10 offset-1">
        <form
          enctype="multipart/form-data"
          method="post"
          novalidate
          class="needs-validation"
          action="/listings/<%= foundListing._id %>?_method=PUT"
        >
          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Edit Title</label>
              <input
                placeholder="Enter Title"
                type="text"
                name="listing[title]"
                class="form-control"
                id=""
                value="<%=foundListing.title%>"
                aria-describedby="emailHelp"
                required
              />
              <div class="invalid-feedback">Title should be present</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Edit Price</label>
              <input
                type="number"
                name="listing[price]"
                class="form-control"
                id=""
                required
                value="<%=foundListing.price%>"
                aria-describedby=""
              />
              <div class="invalid-feedback">Enter a valid Price</div>
            </div>
            <div class="my-auto col-md-6">
              <label for="" class="form-label">Enter description</label><br />
              <textarea
                style="width: 36vw"
                name="listing[description]"
                required
                cols="60"
                id=""
              >
<%=foundListing.description%></textarea
              >
              <div class="invalid-feedback">Enter a valid Description</div>
            </div>
            <div class="mt-4 col-md-6">
              <label for="categorySelect">Select a category:  </label>
              <select name="listing[category]" class=" mx-2 btn btn-light " id="categorySelect">
                  <option class="dropdownitem" value="apartment">apartment</option>
                  <option class="dropdownitem" value="Pent house">Pent house</option>
                  <option class="dropdownitem" value="bungalow">bungalow </option>
                  <option class="dropdownitem" value="Hotel rooms">Hotel rooms</option>
                  <option class="dropdownitem" value="Wild compartments">Wild compartments</option>
              </select>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Enter Country</label>
              <input
                type="text"
                required
                value="<%=foundListing.country%>"
                name="listing[country]"
                class="form-control"
                id=""
              />

              <div class="invalid-feedback">Enter a valid country</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Enter Location</label>
              <input
                type="text"
                required
                value="<%=foundListing.location%>"
                name="listing[location]"
                class="form-control"
                id=""
              />

              <div class="invalid-feedback">Enter a valid location</div>
            </div>
            <div class="mb-3 col-md-12">
              <div class="row">
                <div class="col-6">
                  <p>Old Image</p>
                  <img
                    class="img-fluid"
                    src="<%= foundListing.image.url %>"
                    alt=""
                  />
                </div><br>
                <div class="col-12 mt-3">
                  <label for="" class="form-label">Upload new image</label>
                  <input
                    name="listing[image]"
                    type="file"
                    class="form-control"
                    id=""
                    />
                  </div>
              </div>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
