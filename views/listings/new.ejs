<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container-fluid">
    <div class="row mx-5 my-5">
      <div class="col-10 offset-1">
        <form
          enctype="multipart/form-data"
          method="post"
          action="/listings"
          novalidate
          class="needs-validation"
        >
          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Enter Title</label>
              <input
                placeholder="Enter Title"
                type="text"
                name="listing[title]"
                class="form-control"
                required
                id=""
                aria-describedby="emailHelp"
              />
              <div class="invalid-feedback">Title should be present</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Enter Price</label>
              <input
                name="listing[price]"
                type="number"
                class="form-control"
                required
                id=""
                aria-describedby=""
              />
              <div class="invalid-feedback">Enter valid price</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label"
                >Upload image of your property</label
              >
              <input
                required
                name="listing[image]"
                type="file"
                class="form-control"
                id=""
              />
            </div>
            <div class="mt-4 col-md-6">
              <label for="categorySelect">Select a category:  </label>
              <select name="listing[category]" class=" mx-2 btn btn-light " id="categorySelect">
                  <option class="dropdownitem" value="apartment">apartment</option>
                  <option class="dropdownitem" value="Pent house">Pent house</option>
                  <option class="dropdownitem" value="bungalow">bungalow </option>
                  <option class="dropdownitem" value="Hotel rooms">Hotel rooms</option>
                  <option class="dropdownitem" value="Wild compartments">Wild compartments</option>
              </select>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Enter Country</label>
              <input
                type="text"
                name="listing[country]"
                class="form-control"
                required
                id=""
              />
              <div class="invalid-feedback">Enter a valid country</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Enter Location</label>
              <input
                placeholder="e.g karachi,dha"
                type="text"
                name="listing[location]"
                class="form-control"
                required
                id=""
              />
              <div class="invalid-feedback">Enter a valid location</div>
            </div>
            <div class="mb-3 col-md-6">
              <label for="" class="form-label">Enter description</label><br />
              <textarea
                style="width: 36vw"
                name="listing[description]"
                required
                id=""
              ></textarea>
              <div class="invalid-feedback">Enter a short description</div>
            </div>
            <button type="submit" class="btn btn-dark">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
